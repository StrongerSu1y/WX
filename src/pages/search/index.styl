.search-index-page
	background #ffffff
	min-height 4rem
	.bar
		padding 0.15rem 0.2rem
		background #f8bd48
		display flex
		.select
			padding 0.16rem 0.2rem 0.14rem
			width 1.26rem
			height 0.58rem
			line-height 0.58rem
			font-size 0
			line-height 0.28rem
			background rgba(248, 247, 246, 1)
			border-radius 0.1rem 0 0 0.1rem
			.text
				font-size 0.28rem
				font-family PingFangSC-Regular
				color #333333
				vertical-align middle
			.bottom-arrow
				display inline-block
				margin-left 0.1rem
				width 0.17rem
				height 0.17rem
				border 0.04rem solid #f8bd48
				border-top none
				border-left none
				vertical-align middle
				margin-top -0.085rem
				transform rotate(45deg)
		.input-area
			flex 1
			line-height 0.58rem
			background #ffffff
			border-radius 0 0.1rem 0.1rem 0
			border-left 0.01rem solid #f8f7f6
			padding 0 0.2rem
			display flex
			> input
				flex 1
				font-size 0.26rem
				// line-height 0.26rem
				outline none
				color #333
				&::placeholder
					color #c6c6c6
			> img
				display inline-block
				width 0.28rem
				height 0.28rem
				margin-top 0.15rem
				margin-left 0.3rem
				vertical-align middle
		.clear-button
			margin-left 0.3rem
			line-height 0.58rem
			font-size 0.34rem
			color #523f1a
	.search-block
		margin-top 0.4rem
		padding 0 0.32rem
		&:last-child
			margin-top 0.8rem	
		> .title
			font-size 0
			line-height 0.36rem
			> img
				width 0.28rem
				height 0.36rem
				vertical-align middle
			> .text
				margin-left 0.12rem
				font-size 0.36rem
				color #999
				vertical-align middle
		.search-body
			margin-top 0.4rem
			max-height 3.5rem
			overflow hidden
			.line-box
				font-size 0
				margin-top 0.1rem
				width 100%
				height 0.6rem
				overflow hidden
				> .text
					display inline-block
					margin-right 0.1rem
					padding 0.1rem 0.2rem
					font-size 0.28rem
					line-height 0.4rem
					color #333
					background #f8f7f6
					border-radius 0.3rem
					overflow hidden
					text-overflow ellipsis
					white-space nowrap
				
		