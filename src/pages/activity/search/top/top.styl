@import '../../../../common/stylus/mixin.styl'

.activity-search-top
	position fixed
	width 100%
	left 0
	right 0
	z-index 4
	.activity-search-header
		width 100%
		display flex
		line-height 0.58rem
		padding-top 0.15rem
		padding-right 0.3rem
		padding-left 0.26rem
		padding-bottom 0.15rem
		background #fff
		.back-icon
			font-size 0
			margin-right 0.36rem
			line-height inherit
			> img
				width 0.6rem
				height 0.6rem
				vertical-align middle
		.search-area
			line-height inherit
			padding 0 0.2rem
			flex 1
			display flex
			background #f8f7f6
			border-radius 0.1rem
			font-size 0.26rem
			color #c6c6c6
			.left-part
				line-height inherit
				flex 1
				> input
					width 90%
					font-size 0.26rem
					line-height inherit
					outline none
					color #333
					background none
					&::placeholder
						color #c6c6c6
			.right-part
				line-height inherit
				text-align right
				> img
					width 0.34rem
					height 0.34rem
					display inline-block
					vertical-align middle
		.search_top_message
			line-height inherit
			margin-left 0.4rem
			position relative
			> .dot
				position absolute
				display inline-block
				top 0.04rem
				right -0.16rem
				z-index 3
				border-radius 0.15rem
				width auto
				min-width 0.3rem
				text-align center
				padding 0.04rem 0.06rem
				font-size 0.2rem
				line-height 0.2rem
				color #fff
				background-color #ff3a3f
			> img
				width 0.4rem
				height 0.4rem
				display inline-block
				vertical-align middle
	.search-tab
		display flex
		flex-wrap wrap
		box-shadow 0 0.01rem 0 0 #d6d6d6
		border-bottom 0.01rem solid #D8D8D8
		background #fff
		.tab-item
			flex 0 0 25%
			max-width 25%
			-webkit-box-flex 0
			padding 0.34rem 0
			&:last-child > .box
				border-right none
			.box
				width 100%
				font-size 0
				line-height 0.32rem
				text-align center
				border-right 0.04rem solid #F8BD48
				> .text
					display inline-block
					font-size 0.3rem
					color #6e5627
					overflow hidden
					white-space nowrap
				> .arrow
					transition .3s all
					margin-left 0.16rem
					display inline-block
					width 0.13rem
					height 0.13rem
					margin-top -0.04rem
					border 0.02rem solid #d6d6d6
					border-top none
					border-left none
					transform rotate(45deg)
					&.up
						transform rotate(225deg) translate(-0.1rem, -0rem)		
	.select-box
		width 100%
		height 100%
		.select-area
			width 100%
			padding-left 0.32rem
			animation-duration .5s !important
			background #fff
			position absolute
			top 0
			left 0
			z-index -1
			margin-top 1.9rem
			.select-row
				width 100%
				.select-col
					width 100%
					height 1.2rem
					border-bottom 0.01rem solid #D8D8D8
					span 
						font-size 0.34rem
						font-family PingFangSC-Regular
						color rgba(82,63,26,1)
						line-height 1.2rem
						&:last-child 
							float right
							margin-right 0.32rem
							img
								width 0.16rem
								height 0.26rem
	.mask
		position fixed
		width 100%
		height 100%
		top 0
		left 0
		background rgba(0, 0, 0, 0.5)
		opacity 1
		z-index -2
		visibility visible
		transition-duration 300ms							
					
							