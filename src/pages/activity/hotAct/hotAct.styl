@import '../../../common/stylus/mixin.styl'
@import '../../../common/stylus/base.styl'

.hotAct
	width 100%
	background #ffffff
	.hotAct-title
		width 100%
		padding 0.12rem 0
		line-height 0.34rem
		border-1px(#E6E6E6)
		> .text
			display inline-block
			font-size 0.26rem
			color #f8bd48
			padding-left 0.1rem 
			font-family PingFangSC-Medium
			line-height 26px
		img 
			width 0.24rem
			height 0.24rem
			margin-left 0.2rem
	.activity-list
		width 100%
		.list-item
			height 3.12rem
			position relative
			border-1px(#E6E6E6)
			// &.dis-flex
				// display flex
			.clearFix		
			.itemContain
				position relative
				margin .3rem .2rem
				overflow hidden
			.activity-media
				float left
				// flex-grow 1
				// width 100%
				> img
					width 3.44rem
					height 2.52rem
			.list-right
				float left
				// flex-grow 1
				width 3.4rem
				margin-left 0.2rem
				.activity-name
					font-size 0.3rem
					line-height 0.44rem
					color #333
					font-family PingFangSC-Regular
					text-overflow: ellipsis
					display -webkit-box
					-webkit-box-orient vertical
					-webkit-line-clamp 2
					overflow hidden
				.activity-time
					display block
					font-size 0.26rem
					padding-top 0.2rem
					color #999
				p
					display block	
					padding-top 0.2rem
					color #F8BD48
					.num
						font-size 0.2rem
						> .big
							font-size 0.3rem
							vertical-align baseline
