@import '../../../common/stylus/mixin.styl'
.praise
	width 100%
	background #ffffff
	margin 0.16rem 0
	height 2.78rem
	.praise-title
		width 100%
		padding 0.12rem 0
		line-height 0.34rem
		border-1px(#E6E6E6)
		> .text
			display inline-block
			font-size 0.26rem
			color #f8bd48
			padding-left 0.1rem 
			font-family PingFangSC-Medium
			line-height 26px
		img 
			width 0.24rem
			height 0.24rem
			margin-left 0.2rem
				

	.media-list
		margin 0.3rem 0
		width 100%
		display flex
		position relative
		overflow hidden
		> .img-item
			flex 1
			margin-right 0.1rem
			margin 
			overflow hidden
			// height 1.38rem
			// line-height 1.38rem
			text-align center
			&:last-child
				margin-right 0.2rem
			&:first-child
				margin-left 0.2rem
			> img
				display inline-block
				// max-width 100%
				// max-height 100%
				// min-width 100%
				// min-height 100%
				width 2.3rem
				vertical-align middle
	
				
					
					
				
				