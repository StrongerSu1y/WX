.city-header
  position fixed
  width 100%
  left 0
  top 0
  display flex
  line-height 0.58rem
  padding 0.2rem 0.3rem 0.2rem 0.26rem
  z-index 2
  background #fff
  margin-bottom 0.2rem
  overflow hidden
  .back-icon
    font-size 0
    margin-right 0.3rem
    line-height inherit
    > img
      width 0.54rem
      height 0.54rem
      vertical-align middle
  .search-city
    line-height inherit
    padding 0 0.2rem 0 0
    flex 1
    display flex
    background #f8f7f6
    border-radius 0.1rem
    font-size 0.26rem
    color #c6c6c6
    .left-part
      border-radius 0.1rem
      background #f8f7f6
      width 2.4rem
      line-height inherit
      flex 1
      outline:none
    .right-part
      line-height inherit
      text-align right
      > img
        width 0.34rem
        height 0.34rem
        display inline-block
        vertical-align middle
  .clear-button
    min-width 0.68rem
    margin-left 0.3rem
    line-height 0.58rem
    font-size 0.32rem
    color #523f1a
.wrapper
  margin-top 1rem 
  margin-right 0.5rem
  .letter-item
    .letter
      padding 0.1rem 0.2rem
      font-size 0.3rem
      line-height 2em
      background #eee
      margin-bottom 0.02rem
    .tit 
      padding 0.1rem 0.2rem
      border-bottom 0.01rem solid #f2f2f2
      font-size 0.3rem
.letter-aside
  position fixed
  right: 0.08rem
  top 54%
  transform: translateY(-50%)
  background-color #fff
  text-align center
  justify-content center
  > ul
    font-size 0.26rem
    color #aaa
    li 
      padding 0.06rem 0.06rem
#tip
  position fixed
  background-color rgba(0,0,0,.7)
  left 0
  right 0
  top 0
  bottom 0
  margin auto
  width 1rem
  height 1rem
  z-index 10
  border-radius 5px
  text-align center
  line-height 1rem
  font-size 0.5rem
  color #fff
  opacity 0
.tipAppear 
  animation: appearTip 1 linear 0.5s
@keyframes appearTip {
  0% {
    opacity: 1;
  }
  80% {
    opacity: 0.5;
  }
  100% {
    opacity: 0;
  }
}
