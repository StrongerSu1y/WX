.result
	margin-top: 0.8rem
	.result-header
		position: relative
		width: 100%
		height: 5.2rem
		margin-top: -0.8rem
		.close-text
			font-size: 0.34rem
			line-height: 0.88rem
			color: #a17620
			padding-right: 0.2rem
			text-align: right
			position relative
			#mycanvas
				position absolute
				top: 0.2rem
				right: 1.5rem
		.price
			padding: 0.2rem
			text-align: center
			font-size: 0.3rem
			line-height: 0.6rem
			color: rgb(106, 81, 32)
			letter-spacing: 0.04rem
			> .big
				font-size: 0.6rem
		.result-text
			text-align: center
			font-size: 0.34rem
			margin-top: 0.4rem
			&.success
				color: rgb(88, 178, 0)
			&.fail
				color: rgb(255, 59, 60)
		&.success
			background: url('success_bg.png') no-repeat center
			background-size: 100% 100%
		&.fail
			background: url('fail_bg.png') no-repeat center
			background-size: 100% 100%
	.pay-again
		width: 2.34rem
		margin: 1.7rem auto 0
		height: 1.14rem
		background url('pay_again.png') no-repeat center
		background-size 100%
	.download-text
		width: 5.3rem
		margin: 1.3rem auto 1rem
		height: 0.4rem
		background url('download_text.png') no-repeat center
		background-size 100%
	.download-app
		width: 2.34rem
		margin: 0 auto
		height: 1.14rem
		background url('download_app.png') no-repeat center
		background-size 100%
	.bottom
		position: fixed
		bottom: 0.8rem
		width: 100%
		.logo
			margin: 0 auto
			width: 0.8rem
			height: 0.8rem
			background url('logo.png') no-repeat center
			background-size 100%
		.desc-text
			width: 2.8rem
			margin: 0.15rem auto 0
			height: 0.32rem
			background url('desc_text.png') no-repeat center
			background-size 100%
			