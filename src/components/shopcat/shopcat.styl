.shopcat
	display flex
	width: 100%
	height: 1rem
	position: fixed
	bottom: 0
	background-color: rgba(0, 0, 0, 0.75)
	z-index 3
	.item
		flex: 1
		text-align: center
		color: #fff
	.buttons
		display flex
		.button
			flex: 1
			position: relative
			.dot
				position absolute
				width: 0.24rem
				height: 0.24rem
				top 0.1rem
				right: 0.2rem
				background-color: #f23030
				border-radius: 50%
				line-height: 0.24rem
				font-size: 0.12rem
		img
			display: inline-block
			width: 0.4rem
			margin-top 0.15rem
		.text
			font-size: 0.24rem
			line-height: 1
	.buy
		line-height: 1rem
		background-color: #4387dd
		font-size: 0.32rem
		&.activity
			background-color: #f8bd48
		> img
			display: inline-block
			width: 0.32rem
			vertical-align: middle
		> span
			vertical-align: middle
	.add
		line-height: 1rem
		background-color: #f23030
		font-size: 0.32rem