.link_top_line
	display: flex
	width: 100%
	position: fixed
	left: 0
	height: 0.88rem
	z-index: 999
	line-height: 0.88rem
	background-color: #fff45c
	opacity: 0.74
	.link_logo_img
		width: 0.4rem
		height: 0.88rem
		line-height 0.88rem
		margin-left 0.24rem
		> img
			display inline-block
			width 0.4rem
			height 0.4rem
			vertical-align middle
	.link_title
		flex: 1
		font-size: 0.34rem
		font-family: 'MFYueHei_Noncommercial-Regular'
		color: #edaf35
	.link_text
		flex: 1
		text-align: right
		font-size: 0.28rem
		color: #edaf35
	.link_btn
		width: 1.3rem
		height: 0.6rem
		margin: 0.14rem 0.2rem
		font-size: 0.24rem
		line-height: 0.6rem
		color: #f0f0f0
		text-align: center
		background-color: #edaf35
		border-radius: 0.06rem
	.link_close_button
		width: 0.5rem
		> img
			display inlline-block
			width 100%
		