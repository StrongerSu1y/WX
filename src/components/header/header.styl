@import '../../common/stylus/mixin.styl'
.header
	display: flex
	padding: 0 0.2rem
	position: fixed
	top: 0
	right: 0
	left: 0
	z-index: 999
	background: #fff
	border-bottom: 1px solid #d6d6d6
	.apply
		color: #262323
		font-size: 0.34rem
	.left-part
		width: 1.8rem
		.back-icon
			width:0.4rem
			height:0.4rem
			border: 2px solid #dddddd
			border-top: none
			border-right: none
			transform: rotate(45deg)
			margin-top: 0.2rem
			margin-left: 0.1rem
		.home-icon
			width: 0.6rem
			height: 0.6rem
			background: url('home_icon.png') no-repeat center
			background-size: 100%
			margin-top: 0.1rem
	.right-part
		width: 1.8rem
		> div
			width: 0.4rem
			height: 0.4rem
			margin-top: 0.2rem
		.right-icon-1
			width: 0.4rem
			height: 0.4rem
			float: right
		.right-icon-2
			> div
				width: 100%
				height 100%
				background: url('collect.png') no-repeat center
				background-size: 100%
				&.active
					background: url('collect_active.png') no-repeat center
		.search
			background: url('search_icon.png') no-repeat center
			background-size: 100%
		.share
			background: url('share_logo.png') no-repeat center
			background-size: 100%
		.shopcat
			position: relative
			width: 0.4rem
			height: 0.4rem
			float: right
			background: url('shopcat_icon.png') no-repeat center
			background-size: 100%
			margin-right: 0.6rem
			.dot
				border-radius: 50%
				width: 0.24rem
				height: 0.24rem
				font-size: 0.2rem
				line-height: 0.24rem
				background-color: red
				position: absolute
				top: -0.1rem
				right: -0.2rem
				z-index: 4
				color: #fff
				text-align: center
	p
		flex: 1
		font-size: 0.3rem
		height: 0.8rem
		line-height: 0.8rem
		color:#323232
		text-align: center